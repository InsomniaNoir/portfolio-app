<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_folio_path %>

<% @folio_items.each do |item| %>
  <p><%= link_to item.title, folio_show_path(item.id) %></p>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <p><%= image_tag item.thumb_image unless item.thumb_image.nil? %></p>
  <p><%= link_to "Edit", edit_folio_path(item.id) %></p>
  <%= link_to 'Delete Portfolio Item', folio_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>
  <hr />
<% end %>
