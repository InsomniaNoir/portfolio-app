<div class="container folio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag folio_image(@folio_item.main_image.url, 'main'), width: '100%' %>
    </div>

    <div class="col-md-5">
      <h1><%= @folio_item.title %></h1>

      <hr />

      <em><%= @folio_item.subtitle %></em>

      <p><%= @folio_item.body %></p>

      <hr>
    </div>
  </div>
</div>
