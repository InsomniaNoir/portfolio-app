<div class="col-md-4">
  <div class="card mb-4 box-shadow" data-id="<%= folio_item.id %>">
    <%= image_tag folio_item.thumb_image, class: "card-img-top" unless folio_item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to folio_item.title, folio_show_path(folio_item.id) %></span> <%= folio_item.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
          <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
        </div>
        <small class="text-muted">9 mins</small>
      </div>
    </div>
  </div>
</div>
